# AI Tutor Environment Configuration

# Application Settings
APP_NAME="AI Tutor"
APP_VERSION="1.0.0"
APP_ENV="development" # development, production, testing

# Server Ports
NEXTJS_PORT=3000
PHP_PORT=8000

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/ai-tutor"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Gemini API
GEMINI_API_KEY="your-gemini-api-key"

# Razorpay
NEXT_PUBLIC_RAZORPAY_KEY_ID="your-razorpay-key-id"
RAZORPAY_SECRET_ID="your-razorpay-secret-id"

# Deployment Settings
DOMAIN_NAME="example.com"
USE_HTTPS=false
NGINX_SERVER_NAME="_" # Use domain name in production

# PHP Backend Settings
PHP_DISPLAY_ERRORS=1
PHP_ERROR_REPORTING=E_ALL

# Logging
LOG_LEVEL="info" # debug, info, warning, error
